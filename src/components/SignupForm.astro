---
// Control plane API URL is configurable via environment variable
const apiUrl = import.meta.env.PUBLIC_CONTROL_PLANE_API_URL || 'https://api.kairos.example.com';
const googleClientId = import.meta.env.PUBLIC_GOOGLE_CLIENT_ID || '';
---

<section id="signup" class="py-20 lg:py-28 bg-gradient-to-br from-primary-600 to-primary-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <!-- Section header -->
      <div class="text-center mb-10">
        <h2 class="text-3xl sm:text-4xl font-bold text-white">
          Comienza tu prueba gratis
        </h2>
        <p class="mt-4 text-xl text-primary-100">
          14 dias de acceso completo. Sin tarjeta de credito.
        </p>
      </div>

      <!-- Signup form -->
      <form id="signup-form" class="bg-white rounded-2xl p-8 shadow-2xl">
        <div class="space-y-6">
          <!-- Google Sign-In Button -->
          <div class="flex flex-col items-center">
            <div id="google-signin-btn" class="w-full flex justify-center"></div>
            <!-- Google connected success state (hidden by default) -->
            <div id="google-connected" class="hidden flex items-center justify-center py-3 px-4 bg-green-50 border border-green-200 rounded-xl w-full max-w-xs">
              <svg class="w-5 h-5 text-green-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span id="google-connected-email" class="text-green-800 font-medium text-sm truncate"></span>
            </div>
            <div id="google-loading" class="hidden py-3">
              <svg class="animate-spin h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>
          </div>

          <!-- Divider -->
          <div id="google-divider" class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-white text-gray-500">o continuar con email</span>
            </div>
          </div>

          <!-- Company name -->
          <div>
            <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
              Nombre de la Empresa
            </label>
            <input
              type="text"
              id="company"
              name="company"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              placeholder="Tu Empresa S.A."
            />
          </div>

          <!-- Admin Name (for Google SSO) -->
          <div id="admin-name-field" class="hidden">
            <label for="admin_name" class="block text-sm font-medium text-gray-700 mb-2">
              Nombre del Administrador
            </label>
            <input
              type="text"
              id="admin_name"
              name="admin_name"
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors bg-gray-50"
              placeholder="Tu nombre"
              readonly
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email Corporativo
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              placeholder="tu@empresa.com"
            />
          </div>

          <!-- Subdomain (auto-generated from company name) -->
          <div>
            <label for="subdomain" class="block text-sm font-medium text-gray-700 mb-2">
              Tu subdominio
            </label>
            <div class="flex">
              <input
                type="text"
                id="subdomain"
                name="subdomain"
                required
                pattern="[a-z0-9-]+"
                class="flex-1 px-4 py-3 border border-gray-300 rounded-l-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                placeholder="tu-empresa"
              />
              <span class="inline-flex items-center px-4 py-3 bg-gray-100 border border-l-0 border-gray-300 rounded-r-xl text-gray-600">
                .kairos.app
              </span>
            </div>
            <p class="mt-1 text-sm text-gray-500">Solo letras minusculas, numeros y guiones.</p>
          </div>

          <!-- Terms -->
          <div class="flex items-start">
            <input
              type="checkbox"
              id="terms"
              name="terms"
              required
              class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
            />
            <label for="terms" class="ml-2 text-sm text-gray-600">
              Acepto los <a href="#" class="text-primary-600 hover:underline">Terminos de Servicio</a> y la <a href="#" class="text-primary-600 hover:underline">Politica de Privacidad</a>
            </label>
          </div>

          <!-- Submit button -->
          <button
            type="submit"
            id="submit-btn"
            class="w-full py-4 px-6 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 focus:ring-4 focus:ring-primary-500/50 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <span id="btn-text">Crear Mi Cuenta Gratis</span>
            <span id="btn-loading" class="hidden">
              <svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </span>
          </button>
        </div>

        <!-- Google Auth Info (hidden, stores token) -->
        <input type="hidden" id="google_token" name="google_token" value="" />

        <!-- Success message -->
        <div id="success-message" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-xl">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-green-800 font-medium">Cuenta creada exitosamente. Revisa tu email para continuar.</span>
          </div>
        </div>

        <!-- Error message -->
        <div id="error-message" class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-xl">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <span id="error-text" class="text-red-800 font-medium">Ha ocurrido un error. Por favor intenta de nuevo.</span>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<!-- Google Identity Services SDK -->
<script src="https://accounts.google.com/gsi/client" async defer></script>

<script define:vars={{ apiUrl, googleClientId }}>
  // DOM Elements
  const form = document.getElementById('signup-form');
  const submitBtn = document.getElementById('submit-btn');
  const btnText = document.getElementById('btn-text');
  const btnLoading = document.getElementById('btn-loading');
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');
  const errorText = document.getElementById('error-text');
  const companyInput = document.getElementById('company');
  const subdomainInput = document.getElementById('subdomain');
  const emailInput = document.getElementById('email');
  const adminNameInput = document.getElementById('admin_name');
  const adminNameField = document.getElementById('admin-name-field');
  const googleTokenInput = document.getElementById('google_token');
  const googleSigninBtn = document.getElementById('google-signin-btn');
  const googleConnected = document.getElementById('google-connected');
  const googleConnectedEmail = document.getElementById('google-connected-email');
  const googleLoading = document.getElementById('google-loading');
  const googleDivider = document.getElementById('google-divider');

  // Track if user signed in with Google
  let isGoogleSignIn = false;

  // Decode JWT token to get user info
  function decodeJwtPayload(token) {
    try {
      const base64Url = token.split('.')[1];
      const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
      const jsonPayload = decodeURIComponent(
        atob(base64)
          .split('')
          .map((c) => '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2))
          .join('')
      );
      return JSON.parse(jsonPayload);
    } catch (error) {
      console.error('Error decoding JWT:', error);
      return null;
    }
  }

  // Handle Google Sign-In callback
  function handleGoogleCredentialResponse(response) {
    const credential = response.credential;
    const payload = decodeJwtPayload(credential);

    if (payload) {
      // Store the Google token
      if (googleTokenInput) {
        googleTokenInput.value = credential;
      }

      // Pre-fill form fields
      if (emailInput) {
        emailInput.value = payload.email || '';
        emailInput.classList.add('bg-gray-50');
        emailInput.setAttribute('readonly', 'true');
      }

      if (adminNameInput) {
        adminNameInput.value = payload.name || '';
      }

      // Show admin name field
      if (adminNameField) {
        adminNameField.classList.remove('hidden');
      }

      // Mark as Google sign-in
      isGoogleSignIn = true;

      // Hide Google button and show connected state
      if (googleSigninBtn) {
        googleSigninBtn.classList.add('hidden');
      }
      if (googleConnected && googleConnectedEmail) {
        // Use textContent for safe text insertion (no XSS risk)
        googleConnectedEmail.textContent = 'Conectado como ' + (payload.email || '');
        googleConnected.classList.remove('hidden');
      }

      // Focus on company name if empty
      if (companyInput && !companyInput.value) {
        companyInput.focus();
      }
    }
  }

  // Reset Google sign-in state
  function resetGoogleSignIn() {
    isGoogleSignIn = false;
    if (googleTokenInput) {
      googleTokenInput.value = '';
    }
    if (emailInput) {
      emailInput.classList.remove('bg-gray-50');
      emailInput.removeAttribute('readonly');
    }
    if (adminNameField) {
      adminNameField.classList.add('hidden');
    }
    if (googleConnected) {
      googleConnected.classList.add('hidden');
    }
    if (googleSigninBtn) {
      googleSigninBtn.classList.remove('hidden');
    }
  }

  // Initialize Google Sign-In when SDK is loaded
  function initializeGoogleSignIn() {
    if (typeof google !== 'undefined' && google.accounts && googleClientId) {
      google.accounts.id.initialize({
        client_id: googleClientId,
        callback: handleGoogleCredentialResponse,
        auto_select: false,
        cancel_on_tap_outside: true,
      });

      // Render the Google Sign-In button
      google.accounts.id.renderButton(
        googleSigninBtn,
        {
          theme: 'outline',
          size: 'large',
          type: 'standard',
          text: 'continue_with',
          shape: 'rectangular',
          logo_alignment: 'left',
          width: 320,
          locale: 'es',
        }
      );

      // Hide loading indicator
      if (googleLoading) {
        googleLoading.classList.add('hidden');
      }
    } else if (!googleClientId) {
      // Hide Google button area if no client ID configured
      if (googleSigninBtn) {
        googleSigninBtn.style.display = 'none';
      }
      if (googleConnected) {
        googleConnected.style.display = 'none';
      }
      if (googleLoading) {
        googleLoading.style.display = 'none';
      }
      // Also hide the divider
      if (googleDivider) {
        googleDivider.style.display = 'none';
      }
    }
  }

  // Check if Google SDK is already loaded
  if (typeof google !== 'undefined' && google.accounts) {
    initializeGoogleSignIn();
  } else {
    // Wait for the SDK to load
    window.addEventListener('load', () => {
      // Give the SDK a moment to initialize
      setTimeout(initializeGoogleSignIn, 100);
    });
  }

  // Auto-generate subdomain from company name
  companyInput?.addEventListener('input', (e) => {
    const company = e.target.value;
    const subdomain = company
      .toLowerCase()
      .replace(/[^a-z0-9\s-]/g, '')
      .replace(/\s+/g, '-')
      .replace(/-+/g, '-')
      .substring(0, 30);
    if (subdomainInput) {
      subdomainInput.value = subdomain;
    }
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const googleToken = formData.get('google_token');

    // Build request data
    const data = {
      company_name: formData.get('company'),
      admin_email: formData.get('email'),
      subdomain: formData.get('subdomain'),
    };

    // Add Google token if present (replaces password authentication)
    if (googleToken && isGoogleSignIn) {
      data.google_token = googleToken;
      data.admin_name = formData.get('admin_name');
    }

    // Show loading state
    submitBtn?.setAttribute('disabled', 'true');
    btnText?.classList.add('hidden');
    btnLoading?.classList.remove('hidden');
    successMessage?.classList.add('hidden');
    errorMessage?.classList.add('hidden');

    try {
      // Call control-plane API to create tenant
      const response = await fetch(`${apiUrl}/tenants`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({}));
        throw new Error(errorData.detail || 'Error creating tenant');
      }

      // Show success message
      successMessage?.classList.remove('hidden');
      form.reset();

      // Reset Google sign-in state
      resetGoogleSignIn();

      // Re-initialize Google button
      initializeGoogleSignIn();
    } catch (error) {
      // Show error message
      if (errorText) {
        errorText.textContent = error.message || 'Ha ocurrido un error. Por favor intenta de nuevo.';
      }
      errorMessage?.classList.remove('hidden');
    } finally {
      // Reset button state
      submitBtn?.removeAttribute('disabled');
      btnText?.classList.remove('hidden');
      btnLoading?.classList.add('hidden');
    }
  });
</script>
